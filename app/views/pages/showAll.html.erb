<link rel="stylesheet" href="../assets/stylesheets/application.css">



<p>Listes des potins</p>

<div class="potin1"> 
  <% @potins.each do |potin| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= potin.author %></h5>
        <p class="card-text"><%= potin.content %></p>
        <%= link_to '', edit_potin_path(potin), class: 'btn btn-success bi bi-pencil-square' %>
        <%= form_with url: delete_potin_path(potin), method: :delete, local: true do %>
           <button type="submit" class="btn btn-danger bi bi-trash3" data-confirm="Êtes-vous sûr ?"></button>
        <% end %>

      </div>
    </div>
  <% end %>
  
</div>


